<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firebaseAdd" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:text="Add Student \n[Firebase Database]"
        android:textColor="#518579"
        android:textColorHighlight="#5DAA9B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="ID"
                android:textColor="#18A89B"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="Name"
                android:textColor="#18A89B"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="Father Name"
                android:textColor="#18A89B"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="Surname"
                android:textColor="#18A89B"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="National ID"
                android:textColor="#18A89B"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="Date of Birth"
                android:textColor="#18A89B"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:text="Gender"
                android:textColor="#18A89B"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fb_idEditText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/fb_nameEditText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/fb_fathernameEditText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/fb_surnameEditText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/fb_natIdEditText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/dateButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Choose Date" />

            <RadioGroup
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >


                <RadioButton
                    android:id="@+id/fb_male"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/fb_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <Button
            android:id="@+id/fbAddStudent"
            android:layout_width="157dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/rounded_rectangle"
            android:focusable="true"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <Button
        android:id="@+id/fbAdd_fbMain"
        android:layout_width="127dp"
        android:layout_height="77dp"
        android:layout_gravity="right"
        android:text="Back to Firebase Homepage" />

</LinearLayout>