<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firebaseAdd">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:text="Search for a Student \n[Firebase Database]"
        android:textColor="#518579"
        android:textColorHighlight="#5DAA9B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView22"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/gupter"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text="ID"
            android:textColor="#18A89B"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/fb_idEditText_search"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <Button
            android:id="@+id/fbSearchStudent"
            android:layout_width="157dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/rounded_rectangle"
            android:focusable="true"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="Search"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal"
        android:visibility="invisible">


        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="ID"
                android:textColor="#1D6760"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="Name"
                android:textColor="#1D6760"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="Father Name"
                android:textColor="#1D6760"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="Surname"
                android:textColor="#1D6760"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="National ID"
                android:textColor="#1D6760"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="Date of Birth"
                android:textColor="#1D6760"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="Gender"
                android:textColor="#1D6760"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/searchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/searchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/searchFatherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/searchSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/searchNatID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/searchDoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/searchGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gupter"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:textColor="#333333"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/fbSearch_fbMain"
        android:layout_width="127dp"
        android:layout_height="77dp"
        android:layout_gravity="right"
        android:text="Back to Firebase Homepage" />

</LinearLayout>