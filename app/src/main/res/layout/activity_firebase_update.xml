<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firebaseUpdate">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:text="Update Student \n[Firebase Database]"
        android:textColor="#518579"
        android:textColorHighlight="#5DAA9B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/gupter"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text="ID"
            android:textColor="#18A89B"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/fb_idEditText_update"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="Which attribute would you like to update?"
        android:textColor="#18A89B"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <Switch
                android:id="@+id/idSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="ID"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/nameSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Name"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/fatherNameSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Father Name"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/surnameSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Surname"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/natIdSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="National ID"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/dobSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Date of Birth"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/genderSwitch"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Gender"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="280dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fb_idEditText_update2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="New ID"
                android:inputType="number"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/fb_nameEditText_update"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="New Name"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/fb_fathernameEditText_update"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="New Father Name"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/fb_surnameEditText_update"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="New Surname"
                android:inputType="textPersonName"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/fb_natIdEditText_update"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="New National ID"
                android:inputType="number"
                android:visibility="invisible" />

            <Button
                android:id="@+id/dateButton_update"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Choose Date"
                android:visibility="invisible" />

            <RadioGroup
                android:id="@+id/grp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="invisible">


                <RadioButton
                    android:id="@+id/fb_male_update"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:text="Male"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/fb_female_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:visibility="visible" />
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <Button
            android:id="@+id/fbUpdateStudent"
            android:layout_width="173dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/rounded_rectangle"
            android:focusable="true"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <Button
        android:id="@+id/fbUpdate_fbMain"
        android:layout_width="127dp"
        android:layout_height="77dp"
        android:layout_gravity="right"
        android:text="Back to Firebase Homepage" />

</LinearLayout>