<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firebaseAdd">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:text="Choose a City"
        android:textColor="#518579"
        android:textColorHighlight="#5DAA9B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView22"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/gupter"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text="City"
            android:textColor="#18A89B"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/cityTf"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <Button
            android:id="@+id/changeCity"
            android:layout_width="157dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/rounded_rectangle"
            android:focusable="true"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</LinearLayout>