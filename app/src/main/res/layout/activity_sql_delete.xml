<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:text="Delete Student \n[SQLite Database]"
        android:textColor="#518579"
        android:textColorHighlight="#5DAA9B"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/gupter"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:text="ID"
            android:textColor="#18A89B"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/sql_idEditText_del"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gupter"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="Which attribute would you like to delete?"
        android:textColor="#18A89B"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <CheckBox
                android:id="@+id/sql_idCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="ID" />

            <CheckBox
                android:id="@+id/sql_nameCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Name" />

            <CheckBox
                android:id="@+id/sql_fathernameCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Father Name" />

            <CheckBox
                android:id="@+id/sql_surnameCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Surname" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/sql_natIdCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="National ID" />

            <CheckBox
                android:id="@+id/sql_dobCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Date of Birth" />

            <CheckBox
                android:id="@+id/sql_genderCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:paddingLeft="3dp"
                android:text="Gender" />

            <CheckBox
                android:id="@+id/sql_allCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Delete Everything"
                android:textColor="#FF0000" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:gravity="center|center_horizontal|top"
        android:orientation="horizontal">


        <Button
            android:id="@+id/sqlDelStudent"
            android:layout_width="173dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/rounded_rectangle"
            android:focusable="true"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</LinearLayout>